<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_algoeco_ecosystem_form" model="ir.ui.view">
        <field name="name">view.algoeco.ecosystem.form</field>
        <field name="model">ecosystem</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_run_ecosystem" string="Run Ecosystem" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="algorithm_id"/>
                        <field name="dataset_id"/>
                        <field name="accuracy"/>
                    </group>
                    <notebook>
                        <page string="Results">
                            <field name="line_ids">
                                <tree>
                                    <field name="test_label"/>
                                    <field name="pred_label"/>
                                    <field name="is_correct"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_algoeco_ecosystem_tree" model="ir.ui.view">
        <field name="name">view.algoeco.ecosystem.tree</field>
        <field name="model">ecosystem</field>
        <field name="arch" type="xml">
            <tree>
                <field name="algorithm_id"/>
                <field name="dataset_id"/>
                <field name="accuracy"/>
            </tree>
        </field>
    </record>

    <record id="action_algoeco_ecosystem" model="ir.actions.act_window">
        <field name="name">Ecosystems</field>
        <field name="res_model">ecosystem</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>