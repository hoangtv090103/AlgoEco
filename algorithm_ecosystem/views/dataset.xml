<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_algoeco_dataset_form" model="ir.ui.view">
        <field name="name">view.algoeco.dataset.form</field>
        <field name="model">dataset</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="dataset_file"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_algoeco_dataset_tree" model="ir.ui.view">
        <field name="name">view.algoeco.dataset.tree</field>
        <field name="model">dataset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_algoeco_dataset" model="ir.actions.act_window">
        <field name="name">Datasets</field>
        <field name="res_model">dataset</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>